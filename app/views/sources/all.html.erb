<h1 class="text-center">Sources</h1>
<div class="row">
  <div class="span12">
    <% if @found_sources.size == 0 %>
        <p class="lead">No sources for this thesis.</p>
    <% else %>
        <%= form_tag sources_all_path do %>
            <div class="control-group">
              <p class="lead">
                Search:
                <%= select_tag(:order_by, options_for_select([%w(Type source_type_id), %w(Date created_at)])) %>
              </p>
              <div class="control-group">
                <%= submit_tag 'Order', class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
        <div class="list">
          <ul>
            <%= render 'display_sources', object: @found_sources %>
          </ul>
        </div>
        <br/>
    <% end %>
    <%= link_to 'Back to thesis', thesis_path(params[:thesis_id]), class: 'btn btn-info' %>
  </div>
</div>
