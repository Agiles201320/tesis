<h1 class="text-center">New student</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@student) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="control-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'span6' %>
          <%= f.label :username %>
          <%= f.text_field :username, class: 'span6' %>
          <%= f.label :major %>
          <%= f.text_field :major, class: 'span6' %>
          <%= f.label :student_code %>
          <%= f.text_field :student_code, class: 'span6' %>
          <%= f.label :age %>
          <%= f.number_field :age, class: 'span6' %>
        </div>

        <div class="control-group">
          <%= f.submit 'Add student', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>