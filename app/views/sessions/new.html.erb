<h1 class="text-center">Sign in</h1>
<div class="row">
  <div class="offset3 span6">
    <%= form_tag signin_path, method: :post do %>
        <div class="control-group">
          <%= label_tag :user %>
          <%= text_field_tag :user, nil, class: 'span6' %>
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'span6' %>
        </div>
        <div class="control-group">
          <%= submit_tag 'Sign in', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>